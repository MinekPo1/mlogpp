const PM = 22
const DS = 176
num dsize = DS / PM

num seed = 0
while (true) {
    print(seed)
    printflush(message1)

    for (y = 0; y < dsize; y += 1) {
        for (x = 0; x < dsize; x += 1) {
            num val = op(noise, x + seed, y + seed)
            val = op(abs, val, _)
            val *= 255
            draw.color(val, val, val, 255)
            draw.rect(x * PM, y * PM, PM, PM)
        }
    }
    drawflush(display1)

    seed += 1
}
